<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".personal">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <Button
        android:id="@+id/btnSignout"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"

        android:background="@drawable/roundedbutton"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="sign out" />

    <Button
        android:id="@+id/btnMain"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_alignParentRight="true"
        android:text="main"
        android:background="@drawable/roundedbutton"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="199dp"
        android:layout_height="69dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/books4all"

        android:layout_marginTop="10sp"
        />

    <TextView
        android:id="@+id/tvHelloUser"
        android:layout_width="196dp"
        android:layout_height="57dp"
        android:gravity="center"
        android:text="hello name"
        android:textColor="#000000"
        android:textSize="32sp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"

        />

    <LinearLayout
        android:id="@+id/personalDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tvHelloUser"
        android:baselineAligned="false"
        android:layout_marginTop="10sp"

        >

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="whislist"
            android:background="@drawable/roundedbutton"
            android:layout_marginHorizontal="5dp"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="my books"
            android:background="@drawable/roundedbutton"
            android:layout_marginHorizontal="5dp"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="borrowed books"
            android:background="@drawable/roundedbutton"
            android:layout_marginHorizontal="5dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/personalDown"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="in here there will be a book 1"
            android:textColor="@color/text"
            android:textSize="32sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="in here there will be a book 2"
            android:textColor="@color/text"
            android:textSize="32sp" />

    </LinearLayout>



</RelativeLayout>