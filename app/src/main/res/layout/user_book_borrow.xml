<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:id="@+id/tvUserBookBorrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textColor="@color/btnText"
        android:textSize="48dp"
        android:gravity="center_horizontal"
        android:paddingVertical="10dp"
        android:padding="15dp"
        android:background="@color/colorAccent"
        android:textStyle="bold"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:id="@+id/tvUserdistance"
            android:text="20 miles"
            android:paddingHorizontal = "15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingBottom="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:id="@+id/btnUserBack"
            android:text="return to map"
            android:paddingHorizontal = "15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingBottom="15dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvUserBookBorrowEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="It seems like they don't have any books..."
        android:textColor="@color/text"
        android:gravity="center_horizontal"
        android:textSize="32dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="40dp"
        android:visibility="gone"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvUserBookBorrow"
        android:padding="10dp"
        />


</LinearLayout>