<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/entryLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/books4all"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="40dp"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_below="@+id/entryLogo"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/sign_in_button"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/entryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="The more that you read, the more things you will know. The more that you learn, the more places youu will go"
            android:textColor="@color/btn"
            android:textSize="40dp"
            android:fontFamily="@font/lemonjelly"
            android:gravity="center"
            android:lineHeight="15dp"
            />
        <!-- TODO: FIND A FONT FOR THE QUOTE-->

        <TextView
            android:id="@+id/entryAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:gravity="center"

            android:text="Dr. Seuss"
            android:textColor="@color/btn"
            android:textSize="40dp"
            android:textStyle="bold"

            />
    </LinearLayout>

</RelativeLayout>